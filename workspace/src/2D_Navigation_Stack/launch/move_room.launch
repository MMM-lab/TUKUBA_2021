<?xml version="1.0"?>
<launch>
  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find 2D_Navigation_Stack)/maps/MK_room.yaml" output="screen"/>

  <!-- Run lidar-->
  <include file="$(find 2D_Navigation_Stack)/launch/rplidar_map.launch" >
  </include> 

  <node pkg="tf" type="static_transform_publisher" name="link1" args="0 0 0 0 0 0 base_link laser 100" />

  <!-- Run amcl -->
  <include file="$(find 2D_Navigation_Stack)/launch/amcl.launch" >
  </include>
    
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="controller_frequency" value="10.0"/>
    <param name="controller_patiente" value="15.0"/>
    <param name="xy_goal_tolerance" value='0.50'/> 
    <param name="yaw_goal_tolerance" value='0.15'/>
    <rosparam file="$(find 2D_Navigation_Stack)/launch/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find 2D_Navigation_Stack)/launch/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find 2D_Navigation_Stack)/launch/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find 2D_Navigation_Stack)/launch/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find 2D_Navigation_Stack)/launch/base_local_planner_params.yaml" command="load" />
  </node>

  <!--<node name="rviz" pkg="rviz" type="rviz" args="-d $(find rplidar_ros)/rviz/rplidar.rviz" />-->

</launch>
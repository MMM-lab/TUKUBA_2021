<launch>
  <!-- Arguments -->
  <!--<arg name="map_file" default="$(find 2D_Navigation_Stack)/maps/room_ok.yaml"/>-->
  <arg name="map_file" default="$(find 2D_Navigation_Stack)/maps/MK_room.yaml"/>

  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" output="screen"/>

  <!-- AMCL -->
  <include file="$(find 2D_Navigation_Stack)/launch/amcl.launch"/>

  <!-- publish_waypoints -->
  <!--<arg name="waypoints_file" default="$(find waypoint_specification)/config/waypoints.yaml"/>
  <node name="waypoints_publish" pkg="waypoint_specification" type="waypoints_publish" output="screen">
    <param name="filename" value="$(arg waypoints_file)" />
  </node>-->

  <!-- move_base -->  
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find 2D_Navigation_Stack)/launch/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find 2D_Navigation_Stack)/launch/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find 2D_Navigation_Stack)/launch/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find 2D_Navigation_Stack)/launch/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find 2D_Navigation_Stack)/launch/dwa_local_planner_params.yaml" command="load" />
    <rosparam file="$(find 2D_Navigation_Stack)/launch/move_base_params.yaml" command="load" />
  </node>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find 2D_Navigation_Stack)/launch/navigation.rviz" />

</launch>